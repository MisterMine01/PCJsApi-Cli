{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake",
            "args": [
                "-G 'NMake Makefiles' -DCMAKE_BUILD_TYPE=Debug .."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}